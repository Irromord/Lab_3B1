// Интерфейс для животных
interface Animal {
    void eat();
    void sleep();
}

// Базовый класс для всех животных
abstract class AnimalBase implements Animal {
    protected String name;
    protected int age;

    public AnimalBase(String name, int age) {
        this.name = name;
        this.age = age;
    }

    public abstract void makeSound();

    @Override
    public void eat() {
        System.out.println(name + " is eating.");
    }

    @Override
    public void sleep() {
        System.out.println(name + " is sleeping.");
    }
}

// Класс для тигров
class Tiger extends AnimalBase {
    public Tiger(String name, int age) {
        super(name, age);
    }

    @Override
    public void makeSound() {
        System.out.println("Roar!");
    }
}

// Класс для слонов
class Elephant extends AnimalBase {
    public Elephant(String name, int age) {
        super(name, age);
    }

    @Override
    public void makeSound() {
        System.out.println("Trumpet!");
    }
}

// Класс для пингвинов
class Penguin extends AnimalBase {
    public Penguin(String name, int age) {
        super(name, age);
    }

    @Override
    public void makeSound() {
        System.out.println("Hoot!");
    }
}

// Класс для зоопарка
class Zoo {
    private List<Animal> animals;

    public Zoo() {
        animals = new ArrayList<>();
    }

    public void addAnimal(Animal animal) {
        animals.add(animal);
    }

    public void feedAnimals() {
        for (Animal animal : animals) {
            animal.eat();
        }
    }

    public void makeAnimalsSleep() {
        for (Animal animal : animals) {
            animal.sleep();
        }
    }
}

// Пример использования
public class Main {
    public static void main(String[] args) {
        Zoo zoo = new Zoo();

        Tiger tiger = new Tiger("Tiger", 5);
        Elephant elephant = new Elephant("Elephant", 10);
        Penguin penguin = new Penguin("Penguin", 2);

        zoo.addAnimal(tiger);
        zoo.addAnimal(elephant);
        zoo.addAnimal(penguin);

        zoo.feedAnimals();
        zoo.makeAnimalsSleep();
    }
}
